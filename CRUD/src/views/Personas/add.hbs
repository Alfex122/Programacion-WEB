<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR NUEVO PLATILLO</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="Platillo" class="input-group-text ">Nombre</label>
                        <input class="form-control" type="text" name="Platillo" id="Platillo" placeholder="Enchiladas" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Precio" class="input-group-text ">Precio $</label>
                        <input class="form-control" type="text" name="Precio" id="Precio" placeholder="23" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Submenu" class="input-group-text ">Submenu</label>
                        <input class="form-control" type="text" name="Submenu" id="Submenu" placeholder="1" autofocus required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                       <button class="btn btn-success">Crear</button> 
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>