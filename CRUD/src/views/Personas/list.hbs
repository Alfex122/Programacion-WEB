<div class="container">
    <div class="dir mt-5">
        {{#if heidis}}
        {{#eache}}
        <div class="col-md-3">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Platillo</th>
                        <th>Precio</th>
                        <th>Submenu</th>
                        <th>Disponibilidad</th>
                    </tr>
                </thead>
                <tbody>
                    {{#eache heidis}}
                    <tr>
                        <td>{{saucer}}</td>
                        <td>{{price}}</td>
                        <td>{{submenu}}</td>
                        <td>{{disponibility}}</td>
                        <td>
                            <div>
                                <a href="#" class="btn btn-warning">Editar</a>
                                <a href="#" class="btn btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                    {{/eache}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4">Registro de platillo </td>
                    </tr>
                </tfoot>
                
            </table>
        </div>
        {{/eache}}
        {{else}}
            <div class="card text-center mx-auto" style="width; 350px;">
                <div class="card-header">
                    <h3>Crear nuevo platillo</h3>
                </div>
                <div class="card-body">
                    <p>Preciona este boton para registrar un platillo</p>
                    <a href="#" class="btn btn-primary">Agregar</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>